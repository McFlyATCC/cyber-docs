---
interface Props {
  title: string;
  description?: string;
  lastUpdated?: string;
  updatedBy?: string;
  tool: string;
}

const { title, description = "Documentation", lastUpdated, updatedBy, tool } = Astro.props;
const base = import.meta.env.BASE_URL;

// Navigation structure per tool
const toolNavigation: Record<string, Array<{title: string, href: string}>> = {
  sentinel: [
    { title: "Overview", href: `${base}sentinel/` },
    { title: "Getting Started", href: `${base}sentinel/getting-started/` },
    { title: "Data Connectors", href: `${base}sentinel/data-connectors/` },
    { title: "KQL Queries", href: `${base}sentinel/kql-queries/` },
    { title: "Playbooks", href: `${base}sentinel/playbooks/` },
    { title: "Knowledge Check", href: `${base}sentinel/quiz/` },
  ],
};

const toolDisplayNames: Record<string, string> = {
  sentinel: "Microsoft Sentinel",
};

const navigation = toolNavigation[tool] || [];
const toolName = toolDisplayNames[tool] || tool;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=JetBrains+Mono:wght@400;500;600&family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href={`${base}pagefind/pagefind-ui.css`} rel="stylesheet">
    <title>{title} | {toolName}</title>
  </head>
  <body class="bg-sentinel-darker text-gray-100 min-h-screen font-sans antialiased">
    <div class="flex min-h-screen">
      <!-- Sidebar -->
      <aside class="w-64 bg-sentinel-dark border-r border-gray-800 flex flex-col fixed h-full">
        <!-- Logo / Back to Portal -->
        <div class="p-4 border-b border-gray-800">
          <a href={base} class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors text-sm mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="m12 19-7-7 7-7"/>
              <path d="M19 12H5"/>
            </svg>
            Back to Portal
          </a>
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-lg bg-sentinel-blue/10 flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-sentinel-blue">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"/>
                <path d="m9 12 2 2 4-4"/>
              </svg>
            </div>
            <div>
              <div class="font-display font-semibold text-white">{toolName}</div>
              <div class="text-xs text-gray-500">Documentation</div>
            </div>
          </div>
        </div>
        
        <!-- Search -->
        <div class="p-4 border-b border-gray-800">
          <div id="search" class="search-container"></div>
        </div>
        
        <!-- Navigation -->
        <nav class="flex-1 p-4 overflow-y-auto">
          <ul class="space-y-1">
            {navigation.map(item => (
              <li>
                <a 
                  href={item.href}
                  class:list={[
                    "block px-3 py-2 rounded-lg text-sm transition-colors",
                    currentPath === item.href || currentPath === item.href.slice(0, -1)
                      ? "bg-sentinel-blue/10 text-sentinel-blue font-medium"
                      : "text-gray-400 hover:text-white hover:bg-gray-800/50"
                  ]}
                >
                  {item.title}
                </a>
              </li>
            ))}
          </ul>
        </nav>
        
        <!-- Footer -->
        <div class="p-4 border-t border-gray-800 text-xs text-gray-500">
          <a href="https://github.com/mcflyatcc/cyber-docs" target="_blank" class="flex items-center gap-2 hover:text-gray-400 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            Edit on GitHub
          </a>
        </div>
      </aside>
      
      <!-- Main Content -->
      <main class="flex-1 ml-64">
        <div class="max-w-4xl mx-auto px-8 py-12">
          <slot />
          
          <!-- Page metadata -->
          {(lastUpdated || updatedBy) && (
            <div class="mt-16 pt-8 border-t border-gray-800 flex items-center justify-between text-sm text-gray-500">
              {lastUpdated && (
                <p>Last updated: <time datetime={lastUpdated}>{lastUpdated}</time></p>
              )}
              {updatedBy && (
                <p>Updated by: {updatedBy}</p>
              )}
            </div>
          )}
        </div>
      </main>
    </div>
    
    <!-- Pagefind Search Script -->
    <script src={`${base}pagefind/pagefind-ui.js`} is:inline></script>
    <script is:inline>
      window.addEventListener('DOMContentLoaded', () => {
        if (typeof PagefindUI !== 'undefined') {
          new PagefindUI({ 
            element: "#search",
            showSubResults: true,
            showImages: false,
          });
        }
      });
    </script>
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
  }
  
  ::selection {
    background: rgba(0, 120, 212, 0.4);
  }
  
  ::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }
  
  ::-webkit-scrollbar-track {
    background: #1B1B1F;
  }
  
  ::-webkit-scrollbar-thumb {
    background: #3a3a42;
    border-radius: 4px;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    background: #4a4a52;
  }
  
  /* Pagefind customization */
  .pagefind-ui {
    --pagefind-ui-scale: 0.8;
    --pagefind-ui-primary: #0078D4;
    --pagefind-ui-text: #e5e7eb;
    --pagefind-ui-background: #252529;
    --pagefind-ui-border: #374151;
    --pagefind-ui-tag: #1f2937;
    --pagefind-ui-border-width: 1px;
    --pagefind-ui-border-radius: 8px;
  }
  
  .pagefind-ui__search-input {
    font-family: 'DM Sans', system-ui, sans-serif !important;
  }
  
  /* Code blocks */
  pre {
    background: #1e1e24 !important;
    border: 1px solid #2d2d35;
    border-radius: 8px;
    padding: 1rem;
    overflow-x: auto;
  }
  
  code {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
  }
  
  :not(pre) > code {
    background: #252529;
    padding: 0.125rem 0.375rem;
    border-radius: 4px;
    font-size: 0.875em;
  }
</style>
