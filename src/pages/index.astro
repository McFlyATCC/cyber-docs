---
import PortalLayout from '../layouts/PortalLayout.astro';
import ToolCard from '../components/ToolCard.astro';

const base = import.meta.env.BASE_URL;

const tools = [
  {
    title: "Microsoft Sentinel",
    description: "Cloud-native SIEM and SOAR solution. Learn configuration, KQL queries, playbooks, and incident response workflows.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"/><path d="m9 12 2 2 4-4"/></svg>`,
    href: `${base}sentinel/`,
    status: "active" as const,
    tags: ["SIEM", "Azure", "KQL"]
  },
  {
    title: "CrowdStrike Falcon",
    description: "Endpoint detection and response platform. Covers sensor deployment, policy configuration, and threat hunting.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M12 16v-4"/><path d="M12 8h.01"/></svg>`,
    status: "coming-soon" as const,
    tags: ["EDR", "Threat Intel"]
  },
  {
    title: "Proofpoint",
    description: "Email security and threat protection. Includes email filtering, TRAP configuration, and URL defense setup.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>`,
    status: "coming-soon" as const,
    tags: ["Email", "Phishing"]
  },
  {
    title: "Qualys VMDR",
    description: "Vulnerability management, detection, and response. Covers scanning, reporting, and remediation tracking.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 20h.01"/><path d="M8.5 16.5a5 5 0 0 1 7 0"/><path d="M5 13a10 10 0 0 1 14 0"/><path d="M1.5 9a15 15 0 0 1 21 0"/></svg>`,
    status: "coming-soon" as const,
    tags: ["Vuln Mgmt", "Scanning"]
  },
  {
    title: "Palo Alto NGFW",
    description: "Next-generation firewall administration. Covers policy management, threat prevention, and GlobalProtect VPN.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="3" rx="2"/><path d="M3 9h18"/><path d="M9 21V9"/></svg>`,
    status: "coming-soon" as const,
    tags: ["Firewall", "VPN"]
  },
  {
    title: "Splunk Enterprise",
    description: "Security information and event management. SPL queries, dashboards, and alert configuration.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 3v18h18"/><path d="m19 9-5 5-4-4-3 3"/></svg>`,
    status: "coming-soon" as const,
    tags: ["SIEM", "SPL"]
  }
];
---

<PortalLayout title="Cyber Docs | Security Team Documentation">
  <div class="min-h-screen">
    <!-- Header -->
    <header class="border-b border-gray-800 bg-sentinel-dark/50 backdrop-blur-sm sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 rounded-lg bg-sentinel-blue/10 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-sentinel-blue">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"/>
            </svg>
          </div>
          <span class="font-display font-semibold text-xl">Cyber Docs</span>
        </div>
        <nav class="flex items-center gap-6">
          <a href="#tools" class="text-sm text-gray-400 hover:text-white transition-colors">Tools</a>
          <a href="#team" class="text-sm text-gray-400 hover:text-white transition-colors">Team</a>
          <a href="https://github.com/mcflyatcc/cyber-docs" target="_blank" class="text-sm text-gray-400 hover:text-white transition-colors flex items-center gap-1">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            GitHub
          </a>
        </nav>
      </div>
    </header>

    <!-- Hero Section -->
    <section class="relative overflow-hidden">
      <!-- Background gradient -->
      <div class="absolute inset-0 bg-gradient-to-br from-sentinel-blue/5 via-transparent to-transparent"></div>
      <div class="absolute top-0 right-0 w-96 h-96 bg-sentinel-blue/10 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
      
      <div class="relative max-w-7xl mx-auto px-6 py-24">
        <div class="max-w-3xl">
          <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-sentinel-blue/10 border border-sentinel-blue/20 text-sentinel-blue text-sm font-medium mb-6">
            <span class="w-2 h-2 rounded-full bg-sentinel-blue animate-pulse"></span>
            Internal Documentation
          </div>
          <h1 class="font-display text-5xl font-bold text-white mb-6 leading-tight">
            Cybersecurity<br/>
            <span class="text-sentinel-blue">Knowledge Hub</span>
          </h1>
          <p class="text-xl text-gray-400 leading-relaxed mb-8">
            Interactive documentation for our security tooling stack. 
            Learn configurations, practice with simulated CLIs, and test your knowledge—all in one place.
          </p>
          <div class="flex items-center gap-4">
            <a href="#tools" class="inline-flex items-center gap-2 px-6 py-3 bg-sentinel-blue hover:bg-sentinel-blue/90 text-white font-medium rounded-lg transition-colors">
              Browse Tools
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M5 12h14"></path>
                <path d="m12 5 7 7-7 7"></path>
              </svg>
            </a>
            <a href="#team" class="inline-flex items-center gap-2 px-6 py-3 border border-gray-700 hover:border-gray-600 text-gray-300 font-medium rounded-lg transition-colors">
              Meet the Team
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Tools Grid Section -->
    <section id="tools" class="py-20 border-t border-gray-800/50">
      <div class="max-w-7xl mx-auto px-6">
        <div class="mb-12">
          <h2 class="font-display text-3xl font-bold text-white mb-4">Security Tools</h2>
          <p class="text-gray-400 max-w-2xl">
            Select a tool to access its interactive documentation. Each guide includes hands-on exercises, 
            simulated command-line interfaces, and knowledge checks.
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {tools.map(tool => (
            <ToolCard {...tool} />
          ))}
        </div>
      </div>
    </section>

    <!-- Team Section -->
    <section id="team" class="py-20 border-t border-gray-800/50 bg-sentinel-dark/30">
      <div class="max-w-7xl mx-auto px-6">
        <div class="max-w-3xl">
          <h2 class="font-display text-3xl font-bold text-white mb-6">About the Team</h2>
          <div class="prose prose-lg prose-invert">
            <p class="text-gray-400 leading-relaxed mb-6">
              The Cybersecurity Operations team is responsible for protecting our enterprise infrastructure 
              through proactive threat detection, incident response, and security tooling management.
            </p>
            <h3 class="font-display text-xl font-semibold text-white mt-8 mb-4">Our Responsibilities</h3>
            <ul class="text-gray-400 space-y-3">
              <li class="flex items-start gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-sentinel-blue mt-1 flex-shrink-0">
                  <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                  <path d="m9 11 3 3L22 4"/>
                </svg>
                <span>Security monitoring and incident response across all enterprise systems</span>
              </li>
              <li class="flex items-start gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-sentinel-blue mt-1 flex-shrink-0">
                  <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                  <path d="m9 11 3 3L22 4"/>
                </svg>
                <span>Vulnerability management and remediation tracking</span>
              </li>
              <li class="flex items-start gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-sentinel-blue mt-1 flex-shrink-0">
                  <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                  <path d="m9 11 3 3L22 4"/>
                </svg>
                <span>Security tool administration and optimization</span>
              </li>
              <li class="flex items-start gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-sentinel-blue mt-1 flex-shrink-0">
                  <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                  <path d="m9 11 3 3L22 4"/>
                </svg>
                <span>Threat intelligence integration and threat hunting</span>
              </li>
              <li class="flex items-start gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-sentinel-blue mt-1 flex-shrink-0">
                  <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                  <path d="m9 11 3 3L22 4"/>
                </svg>
                <span>Security awareness training and policy development</span>
              </li>
            </ul>
            
            <h3 class="font-display text-xl font-semibold text-white mt-8 mb-4">Documentation Guidelines</h3>
            <p class="text-gray-400 leading-relaxed">
              This documentation hub is maintained by the entire security team. Each tool's documentation 
              is owned by a designated team member who ensures content accuracy and freshness. 
              All updates go through GitHub pull requests for peer review.
            </p>
            <p class="text-gray-400 leading-relaxed mt-4">
              To suggest updates or report issues, open an issue in the GitHub repository or 
              submit a pull request directly.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="border-t border-gray-800 py-8">
      <div class="max-w-7xl mx-auto px-6 flex items-center justify-between text-sm text-gray-500">
        <p>© 2025 Cybersecurity Team. Internal use only.</p>
        <p>Last updated: <time datetime="2025-01-06">January 6, 2025</time></p>
      </div>
    </footer>
  </div>
</PortalLayout>
