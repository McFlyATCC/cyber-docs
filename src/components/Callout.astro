---
interface Props {
  type: 'info' | 'warning' | 'tip' | 'danger';
  title?: string;
}

const { type, title } = Astro.props;

const styles = {
  info: {
    bg: 'bg-blue-500/10',
    border: 'border-blue-500/30',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-blue-400"><circle cx="12" cy="12" r="10"/><path d="M12 16v-4"/><path d="M12 8h.01"/></svg>`,
    title: title || 'Note',
    titleColor: 'text-blue-400'
  },
  warning: {
    bg: 'bg-amber-500/10',
    border: 'border-amber-500/30',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-amber-400"><path d="m21.73 18-8-14a2 2 0 0 0-3.48 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3"/><path d="M12 9v4"/><path d="M12 17h.01"/></svg>`,
    title: title || 'Warning',
    titleColor: 'text-amber-400'
  },
  tip: {
    bg: 'bg-green-500/10',
    border: 'border-green-500/30',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-400"><path d="M12 2v8"/><path d="m4.93 10.93 1.41 1.41"/><path d="M2 18h2"/><path d="M20 18h2"/><path d="m19.07 10.93-1.41 1.41"/><path d="M22 22H2"/><path d="m8 22 4-10 4 10"/></svg>`,
    title: title || 'Pro Tip',
    titleColor: 'text-green-400'
  },
  danger: {
    bg: 'bg-red-500/10',
    border: 'border-red-500/30',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-red-400"><circle cx="12" cy="12" r="10"/><path d="m15 9-6 6"/><path d="m9 9 6 6"/></svg>`,
    title: title || 'Danger',
    titleColor: 'text-red-400'
  }
};

const style = styles[type];
---

<div class={`my-6 p-4 rounded-lg border ${style.bg} ${style.border}`}>
  <div class="flex items-start gap-3">
    <div class="flex-shrink-0 mt-0.5">
      <Fragment set:html={style.icon} />
    </div>
    <div class="flex-1">
      <div class={`font-medium ${style.titleColor} mb-1`}>{style.title}</div>
      <div class="text-sm text-gray-300 leading-relaxed">
        <slot />
      </div>
    </div>
  </div>
</div>
